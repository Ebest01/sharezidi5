  "shortcuts": [
    {
      "name": "Quick Transfer",
      "short_name": "Transfer",
      "description": "Start a quick file transfer",
      "url": "/transfer",
      "icons": [
        {
          "src": "/icons/shortcut-transfer.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "QR Scanner",
      "short_name": "QR",
      "description": "Scan QR code to connect devices",
      "url": "/qr",
      "icons": [
        {
          "src": "/icons/shortcut-qr.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Transfer History",
      "short_name": "History",
      "description": "View transfer history",
      "url": "/history",
      "icons": [
        {
          "src": "/icons/shortcut-history.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "related_applications": [
    {
      "platform": "web",
      "url": "https://sharezidi.com"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "capture_links": "new-client",
  "protocol_handlers": [
    {
      "protocol": "web+sharezidi",
      "url": "/transfer?url=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/transfer",
      "accept": {
        "application/octet-stream": [".*"],
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp"],
        "video/*": [".mp4", ".avi", ".mov", ".mkv"],
        "audio/*": [".mp3", ".wav", ".flac", ".aac"],
        "text/*": [".txt", ".md", ".json", ".xml"],
        "application/pdf": [".pdf"],
        "application/zip": [".zip", ".rar", ".7z"]
      }
    }
  ],
  "share_target": {
    "action": "/transfer",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["*/*"]
        }
      ]
    }
  },
  "permissions": [
    "camera",
    "microphone",
    "geolocation",
    "notifications",
    "background-sync"
  ],
  "features": [
    "Cross Platform",
    "WebRTC P2P",
    "End-to-End Encryption",
    "Resume Capability",
    "QR Code Discovery",
    "Offline Support",
    "Background Sync",
    "Push Notifications"
  ]
}
